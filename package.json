{
  "name": "terra-toolkit",
  "private": true,
  "version": "5.25.0",
  "description": "Utilities to help when developing terra modules.",
  "engines": {
    "node": ">=8.10.0 <12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerner/terra-toolkit"
  },
  "keywords": [
    "Cerner",
    "Terra",
    "Terra Toolkit",
    "terra-toolkit",
    "UI"
  ],
  "author": "Cerner Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/cerner/terra-toolkit/issues"
  },
  "browserslist": [
    "./packages/browserslist-config-terra/browserslist.config.jss"
  ],
  "eslintConfig": {
    "extends": "./packages/eslint-config-terra/eslint.config.js",
    "settings": {
      "polyfills": [
        "Promise"
      ]
    }
  },
  "scripts": {
    "bootstrap:hoist": "lerna bootstrap --hoist",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "clean:install": "npm run clean && npm install",
    "lint": "npm run lint:js",
    "lint:js": "eslint --ext .js,.jsx .",
    "postinstall": "npm run bootstrap:hoist"
  },
  "devDependencies": {
    "danger": "^9.1.0",
    "eslint": "^6.1.0",
    "lerna": "^3.20.2"
  }
}
