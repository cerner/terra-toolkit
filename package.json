{
  "name": "terra-toolkit",
  "version": "2.9.2",
  "description": "Utilities to help when developing terra modules.",
  "main": "lib/index.js",
  "engines": {
    "node": "^8.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerner/terra-toolkit"
  },
  "keywords": [
    "Cerner",
    "Terra",
    "Terra Toolkit",
    "terra-toolkit",
    "UI"
  ],
  "author": "Cerner Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/cerner/terra-toolkit/issues"
  },
  "bin": {
    "tt:aggregate-translations": "./bin/aggregate-translations.js"
  },
  "scripts": {
    "clean:all": "npm run clean:compiled && npm run clean:dependencies",
    "clean:compiled": "rimraf lib",
    "clean:dependencies": "rimraf node_modules",
    "clean:install": "npm run clean:all && npm install && npm run compile:build",
    "compile": "npm run clean:compiled && npm run compile:build",
    "compile:build": "babel src --out-dir lib --copy-files",
    "danger": "danger",
    "jest": "jest ./tests/jest/* ",
    "lint": "eslint --ext .js,.jsx .",
    "nightwatch": "nightwatch",
    "nightwatch:port-provided": "nightwatch -c tests/test.nightwatch.conf.js",
    "prepare": "npm run compile",
    "prepublishOnly": "npm test",
    "pretest": "npm run lint",
    "release:major": "node scripts/release/release.js major",
    "release:minor": "node scripts/release/release.js minor",
    "release:patch": "node scripts/release/release.js patch",
    "test": "npm run jest && npm run compile && npm run nightwatch && npm run nightwatch:port-provided && wdio wdio.conf.js",
    "wdio": "wdio wdio.conf.js"
  },
  "dependencies": {
    "async": "^2.5.0",
    "autoprefixer": "^6.7.7",
    "axe-core": "^2.6.1",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.23.0",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.17",
    "commander": "^2.9.0",
    "css-loader": "^0.28.7",
    "express": "^4.16.2",
    "file-loader": "^1.1.5",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.1",
    "ip": "^1.1.5",
    "load-json-file": "^2.0.0",
    "lodash.startcase": "^4.4.0",
    "memory-fs": "^0.4.1",
    "mime-types": "^2.1.18",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.5.2",
    "postcss": "^6.0.9",
    "postcss-assets-webpack-plugin": "^1.1.0",
    "postcss-custom-properties": "^6.0.1",
    "postcss-loader": "^2.0.6",
    "postcss-rtl": "^1.1.2",
    "raf": "^3.4.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.6",
    "wdio-mocha-framework": "^0.5.11",
    "wdio-visual-regression-service": "^0.8.0",
    "webdriverio": "^4.9.8",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13",
    "webpack-merge": "^4.1.2"
  },
  "peerDependencies": {
    "nightwatch": "^0.9.12"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "danger": "^1.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "html-webpack-plugin": "^3.1.0",
    "jest": "^21.0.2",
    "nightwatch": "^0.9.12",
    "rimraf": "^2.6.1",
    "shelljs": "^0.7.6"
  }
}
